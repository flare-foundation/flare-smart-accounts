{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": [
    "./deployment",
    "./typechain-types",
    "./typechain",
    "./typechain-truffle",
    "./typechain-web3",
    "./test",
    "./scripts"
  ],
  "files": ["./hardhat.config.ts"]
}
