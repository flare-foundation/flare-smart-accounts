    "intercept-stdout": "0.1.2",
    "pascal-case": "^3.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solidity-coverage": "^0.8.11",
    "sqlite3": "^5.1.7",
