  "license": "MIT",
  "directories": {},
  "scripts": {
    "format": "prettier --write .",
    "---------TEST---SCRIPTS": "",
    "---------DEPLOY---SCRIPTS": "",
    "deploy_contracts_coston2": "dotenv -e .env -- sh -c 'forge script deployment/scripts/DeployXRPLControlledWallet.s.sol:DeployXRPLControlledWallet --rpc-url $COSTON2_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --broadcast' | tee forge-deploy-output.txt && ts-node deployment/scripts/save-deployed-addresses.ts",
    "deploy_mock_contracts_coston2": "dotenv -e .env -- sh -c 'forge script deployment/scripts/DeployXRPLControlledWalletDevMock.s.sol:DeployXRPLControlledWalletDevMock --rpc-url $COSTON2_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --broadcast' | tee forge-deploy-output.txt && ts-node deployment/scripts/save-deployed-addresses.ts mock",
    "deploy_my_erc462_coston2": "dotenv -e .env -- sh -c 'forge script deployment/scripts/DeployMyERC4626.s.sol:DeployMyERC4626 --rpc-url $COSTON2_RPC_URL --private-key $DEPLOYER_PRIVATE_KEY --broadcast'",
    "---------VERIFIER---SCRIPTS": "",
    "verify_contracts_coston2": "ts-node deployment/scripts/verify-contracts.ts coston2",
    "verify_mock_contracts_coston2": "ts-node deployment/scripts/verify-contracts.ts coston2 mock"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "dotenv-cli": "^10.0.0",
